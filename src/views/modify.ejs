<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <title></title>
    <script type="text/javascript">
      $(document).ready(function(){
      });
   
    </script>
  </head>
  <body>
    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" crossorigin="anonymous"></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
    <!--
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js" integrity="sha384-eMNCOe7tC1doHpGoWe/6oMVemdAVTMs2xqW4mwXrXsW0L84Iytr2wi5v2QjrP/xp" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.min.js" integrity="sha384-cn7l7gDp0eyniUwwAZgrzD06kc/tftFf19TOAs2zVinnD/C7E91j9yyk5//jjpt/" crossorigin="anonymous"></script>
    -->
    <main>
      <div class="container py-4">
        <header class="pb-3 mb-4 border-bottom">
          <a href="/" class="d-flex align-items-center text-dark text-decoration-none">
            <span class="fs-4">AWS Solution Achitect Professional (SAP-C01) v26.25</span>
          </a>
        </header>
    
        <div class="p-5 mb-4 bg-light rounded-3">
          
          <form action="/modify" method="POST">
            <div class="mb-3">
              <label for="exampleFormControlTextarea1" class="form-label">번호</label>
              <input type="text" class="form-control" id="txtNo" name="txtNo" value="<%= no %>">
            </div>
            <div class="mb-3">
              <label for="exampleFormControlTextarea1" class="form-label">문제</label>
              <textarea class="form-control" id="txtQuestion" name="txtQuestion" rows="10"><%= question %></textarea>
            </div>
            <div class="mb-3">
              <label for="exampleFormControlInput1" class="form-label">A</label>
              <% if(answer[0].correct) {
                %> <input type="checkbox" class="form-check-input" id="chkAnswerA" name="chkAnswerA" checked> <%
              } else {
                %> <input type="checkbox" class="form-check-input" id="chkAnswerA" name="chkAnswerA"> <%
              } %>
              <input type="text" class="form-control" id="txtAnswerA" name="txtAnswerA" placeholder="" value="<%= answer[0].text %>">
            </div>
            <div class="mb-3">
              <label for="exampleFormControlInput1" class="form-label">B</label>
              <% if(answer[1].correct) {
                %> <input type="checkbox" class="form-check-input" id="chkAnswerB" name="chkAnswerB" checked> <%
              } else {
                %> <input type="checkbox" class="form-check-input" id="chkAnswerB" name="chkAnswerB"> <%
              } %>
              <input type="text" class="form-control" id="txtAnswerB" name="txtAnswerB" placeholder="" value="<%= answer[1].text %>">
            </div>
            <div class="mb-3">
              <label for="exampleFormControlInput1" class="form-label">C</label>
              <% if(answer[2].correct) {
                %> <input type="checkbox" class="form-check-input" id="chkAnswerC" name="chkAnswerC" checked> <%
              } else {
                %> <input type="checkbox" class="form-check-input" id="chkAnswerC" name="chkAnswerC"> <%
              } %>
              <input type="text" class="form-control" id="txtAnswerC" name="txtAnswerC" placeholder="" value="<%= answer[2].text %>">
            </div>
            <div class="mb-3">
              <label for="exampleFormControlInput1" class="form-label">D</label>
              <% if(answer[3].correct) {
                %> <input type="checkbox" class="form-check-input" id="chkAnswerD" name="chkAnswerD" checked> <%
              } else {
                %> <input type="checkbox" class="form-check-input" id="chkAnswerD" name="chkAnswerD"> <%
              } %>
              <input type="text" class="form-control" id="txtAnswerD" name="txtAnswerD" placeholder="" value="<%= answer[3].text %>">
            </div>
            <div class="mb-3">
              <label for="exampleFormControlInput1" class="form-label">E</label>

              <% if(answer.length > 4) {
                if(answer[4].correct) {
                  %> <input type="checkbox" class="form-check-input" id="chkAnswerE" name="chkAnswerE" checked> <%
                } else {
                  %> <input type="checkbox" class="form-check-input" id="chkAnswerE" name="chkAnswerE"> <%
                }
                %> <input type="text" class="form-control" id="txtAnswerE" name="txtAnswerE" placeholder="" value="<%= answer[4].text %>"> <%
              } else {
                %> <input type="checkbox" class="form-check-input" id="chkAnswerE" name="chkAnswerE"> 
                  <input type="text" class="form-control" id="txtAnswerE" name="txtAnswerE" placeholder="" value=""><%
              } 
              %>
              
            </div>
            <div class="mb-3">
              <label for="exampleFormControlInput1" class="form-label">F</label>

              <% if(answer.length > 5) {
                if(answer[5].correct) {
                  %> <input type="checkbox" class="form-check-input" id="chkAnswerF" name="chkAnswerF" checked> <%
                } else {
                  %> <input type="checkbox" class="form-check-input" id="chkAnswerF" name="chkAnswerF"> <%
                }
                %> <input type="text" class="form-control" id="txtAnswerE" name="txtAnswerF" placeholder="" value="<%= answer[5].text %>"> <%
              } else {
                %> <input type="checkbox" class="form-check-input" id="chkAnswerF" name="chkAnswerF"> 
                  <input type="text" class="form-control" id="txtAnswerF" name="txtAnswerF" placeholder="" value=""><%
              } 
              %>
              
            </div>
            <button id='btnSubmit' type="submit" class="btn btn-primary">저장</button>
          </form>
        </div>
    
        <footer class="pt-3 mt-4 text-muted border-top">
          &copy; 2021
        </footer>
      </div>
    </main>

  </body>
</html>